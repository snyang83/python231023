import re

def is_valid_korean_resident_number(rrn):
    # Check if the input matches the expected format
    if not re.match(r'^\d{6}-?[1-2]\d{6}$', rrn):
        return False

    # Remove hyphen if present
    rrn = rrn.replace("-", "")

    # Extract the birthdate (YYMMDD) and gender digit
    birthdate = rrn[:6]
    gender_digit = int(rrn[6])

    # Check if the first digit after the birthdate is 1 or 2
    if gender_digit not in (1, 2):
        return False

    # Check the validity of the birthdate
    year = int(birthdate[:2])
    month = int(birthdate[2:4])
    day = int(birthdate[4:6])

    if year < 0 or month < 1 or month > 12 or day < 1 or day > 31:
        return False

    return True

# Sample resident registration numbers for testing
sample_rrn_list = [
    "900101-1234567",
    "950301-2345678",
    "001231-3456789",
    "020228-1123456",
    "980712-2123456",
    "891204-1111111",
    "070601-2222222",
    "040422-1222222",
    "930731-2111111",
    "880430-2222222"
]

for rrn in sample_rrn_list:
    if is_valid_korean_resident_number(rrn):
        print(f"{rrn} is a valid Korean resident registration number.")
    else:
        print(f"{rrn} is not a valid Korean resident registration number.")
